<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linear_layout"
    android:layout_width="20mm"
    android:layout_height="21mm"
    android:orientation="vertical"
    android:layout_marginLeft="10dp"
    android:layout_marginBottom="@dimen/dimen_10dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp"
        android:background="@drawable/room_tiles_shape">

        <ImageView
            android:id="@+id/room_logo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/icon_kitchen_d"/>

        <TextView
            android:id="@+id/room_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reception"
            android:textSize="@dimen/dimen_15dp"
            android:layout_marginTop="10dp"
            />

        <TextView
            android:id="@+id/room_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2 Active"
            android:textColor="@color/room_sub_title"
            android:textSize="12dp"
            />


    </LinearLayout>


</LinearLayout>