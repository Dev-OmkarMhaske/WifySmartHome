<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dimen_10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/scene_tile"
        android:layout_width="20mm"
        android:layout_height="21mm"
        android:orientation="vertical"
        android:background="@drawable/rectangle_shape_background"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/dimen_15dp"
            android:weightSum="3">

            <ImageView
                android:id="@+id/scene_logo"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/dimen_10dp"
                android:src="@drawable/icon_home_setting_user" />

            <ImageView
                android:id="@+id/scene_delete"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:visibility="invisible"
                android:layout_marginLeft="@dimen/dimen_20dp"
                android:src="@drawable/icon_delete_accessories"
                app:tint="@color/text_white" />

        </LinearLayout>

        <TextView
            android:id="@+id/scene_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_20dp"
            android:layout_marginLeft="@dimen/dimen_15dp"
            android:background="@null"
            android:text="Light -1"
            android:textColor="@color/text_white"
            android:textSize="@dimen/dimen_15dp" />

    </LinearLayout>


</LinearLayout>