<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linear_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dimen_10dp"
    android:layout_marginBottom="@dimen/dimen_10dp"
    android:orientation="vertical"
    >

    <LinearLayout
        android:id="@+id/generic_tile_background"
        android:layout_width="20mm"
        android:layout_height="21mm"
        android:orientation="vertical"
        android:padding="10dp"
        android:gravity="center_vertical"
        android:background="@drawable/room_tiles_shape">

        <ImageView
            android:id="@+id/generic_logo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginBottom="@dimen/dimen_5dp"
            android:src="@drawable/icon_light_fill_d" />

        <TextView
            android:id="@+id/generic_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Generic"
            android:textSize="@dimen/dimen_15dp"
            android:textColor="@color/text_white"
            android:background="@null"
            android:layout_marginTop="10dp"
            />

        <TextView
            android:id="@+id/generic_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2 Active"
            android:textColor="@color/text_white"
            android:textSize="12dp"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/motion_tile_background"
        android:layout_width="20mm"
        android:layout_height="21mm"
        android:orientation="vertical"
        android:padding="10dp"
        android:gravity="center_vertical"
        android:background="@drawable/room_tiles_shape">

        <ImageView
            android:id="@+id/motion_logo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginBottom="@dimen/dimen_5dp"
            android:src="@drawable/icon_motion_d" />

        <TextView
            android:id="@+id/motion_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Motion"
            android:textSize="@dimen/dimen_15dp"
            android:textColor="@color/text_white"
            android:background="@null"
            android:layout_marginTop="10dp"
            />

        <TextView
            android:id="@+id/motion_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2 Active"
            android:textColor="@color/text_white"
            android:textSize="12dp"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/rgb_tile_background"
        android:layout_width="20mm"
        android:layout_height="21mm"
        android:orientation="vertical"
        android:padding="10dp"
        android:gravity="center_vertical"
        android:background="@drawable/room_tiles_shape">

        <ImageView
            android:id="@+id/rgb_logo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginBottom="@dimen/dimen_5dp"
            android:src="@drawable/icon_rgb_d" />

        <TextView
            android:id="@+id/rgb_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RGB"
            android:textSize="@dimen/dimen_15dp"
            android:textColor="@color/text_white"
            android:background="@null"
            android:layout_marginTop="10dp"
            />

        <TextView
            android:id="@+id/rgb_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Master"
            android:textColor="@color/text_white"
            android:textSize="12dp"
            />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/fan_tile_background"
        android:layout_width="20mm"
        android:layout_height="21mm"
        android:orientation="vertical"
        android:padding="10dp"
        android:gravity="center_vertical"
        android:background="@drawable/room_tiles_shape">

        <ImageView
            android:id="@+id/delete_fan"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_gravity="right"
            android:visibility="gone"
            android:layout_marginBottom="-10dp"
            android:src="@drawable/icon_delete_accessories"
            app:tint="@color/text_white" />

        <ImageView
            android:id="@+id/fan_logo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginBottom="@dimen/dimen_5dp"
            android:src="@drawable/icon_fan_d" />

        <TextView
            android:id="@+id/fan_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FAN"
            android:textSize="@dimen/dimen_15dp"
            android:textColor="@color/text_white"
            android:background="@null"
            android:layout_marginTop="10dp"
            />

        <LinearLayout
            android:id="@+id/fan_speed_layout"
            android:layout_width="wrap_content"
            android:layout_height="12dp"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/dimen_5dp"
            android:orientation="horizontal"
            android:visibility="gone"
            >

            <ImageView
                android:id="@+id/fan_speed_level_1"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_marginRight="@dimen/dimen_5dp"
                android:src="@drawable/icon_white_circle"/>

            <ImageView
                android:id="@+id/fan_speed_level_2"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_marginRight="@dimen/dimen_5dp"
                android:src="@drawable/icon_white_circle"/>
            <ImageView
                android:id="@+id/fan_speed_level_3"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_marginRight="@dimen/dimen_5dp"
                android:src="@drawable/icon_white_circle"/>
            <ImageView
                android:id="@+id/fan_speed_level_4"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_marginRight="@dimen/dimen_5dp"
                android:src="@drawable/icon_white_circle"/>
            <ImageView
                android:id="@+id/fan_speed_level_5"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:src="@drawable/icon_white_circle"/>
        </LinearLayout>

        <TextView
            android:id="@+id/fan_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2 Active"
            android:textColor="@color/text_white"
            android:textSize="12dp"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/curtain_tile_background"
        android:layout_width="20mm"
        android:layout_height="21mm"
        android:orientation="vertical"
        android:padding="10dp"
        android:gravity="center_vertical"
        android:background="@drawable/room_tiles_shape">

        <ImageView
            android:id="@+id/curtain_logo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginBottom="@dimen/dimen_5dp"
            android:src="@drawable/icon_curtain_d" />

        <TextView
            android:id="@+id/curtain_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Curtain"
            android:textSize="@dimen/dimen_15dp"
            android:textColor="@color/text_white"
            android:background="@null"
            android:layout_marginTop="10dp"
            />

        <TextView
            android:id="@+id/curtain_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Open"
            android:textColor="@color/text_white"
            android:textSize="12dp"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/power_tile_background"
        android:layout_width="20mm"
        android:layout_height="21mm"
        android:orientation="vertical"
        android:padding="10dp"
        android:gravity="center_vertical"
        android:background="@drawable/room_tiles_shape">

        <ImageView
            android:id="@+id/power_logo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginBottom="@dimen/dimen_5dp"
            android:src="@drawable/icon_ac_d" />

        <TextView
            android:id="@+id/power_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Power"
            android:textSize="@dimen/dimen_15dp"
            android:textColor="@color/text_white"
            android:background="@null"
            android:layout_marginTop="10dp"
            />

        <TextView
            android:id="@+id/power_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Active"
            android:textColor="@color/text_white"
            android:textSize="12dp"
            />

    </LinearLayout>

</LinearLayout>