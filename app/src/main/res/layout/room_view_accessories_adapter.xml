    <LinearLayout
        android:id="@+id/fan_tile_background"
        android:layout_width="20mm"
        android:layout_height="21mm"
        android:background="@drawable/room_tiles_shape"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:padding="10dp">

        <ImageView
            android:id="@+id/delete_fan"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_gravity="right"
            android:layout_marginBottom="-10dp"
            android:src="@drawable/icon_delete_accessories"
            android:visibility="gone"
            app:tint="@color/text_white" />

        <ImageView
            android:id="@+id/fan_setting"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_gravity="center_vertical|right"
            android:layout_marginLeft="6mm"
            android:layout_marginTop="-8dp"
            android:src="@drawable/icon_setting" />

        <ImageView
            android:id="@+id/fan_logo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="-15dp"
            android:layout_marginBottom="@dimen/dimen_5dp"
            android:src="@drawable/icon_fan_d" />

        <TextView
            android:id="@+id/fan_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@null"
            android:text="FAN"
            android:textColor="@color/text_white"
            android:textSize="@dimen/dimen_15dp" />

        <LinearLayout
            android:id="@+id/fan_speed_layout"
            android:layout_width="wrap_content"
            android:layout_height="12dp"
            android:layout_marginTop="@dimen/dimen_5dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone">

            <ImageView
                android:id="@+id/fan_speed_level_1"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_marginRight="@dimen/dimen_5dp"
                android:src="@drawable/icon_white_circle" />

            <ImageView
                android:id="@+id/fan_speed_level_2"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_marginRight="@dimen/dimen_5dp"
                android:src="@drawable/icon_white_circle" />

            <ImageView
                android:id="@+id/fan_speed_level_3"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_marginRight="@dimen/dimen_5dp"
                android:src="@drawable/icon_white_circle" />

            <ImageView
                android:id="@+id/fan_speed_level_4"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_marginRight="@dimen/dimen_5dp"
                android:src="@drawable/icon_white_circle" />

            <ImageView
                android:id="@+id/fan_speed_level_5"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:src="@drawable/icon_white_circle" />
        </LinearLayout>

        <TextView
            android:id="@+id/fan_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2 Active"
            android:textColor="@color/text_white"
            android:textSize="12dp" />

        <ImageView
            android:id="@+id/fan_freeze"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="right"
            android:layout_marginTop="-20dp"
            android:src="@drawable/icon_lock"
            android:visibility="invisible" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/curtain_tile_background"
        android:layout_width="20mm"
        android:layout_height="21mm"
        android:background="@drawable/room_tiles_shape"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:padding="10dp">

        <ImageView
            android:id="@+id/curtain_setting"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_gravity="center_vertical|right"
            android:layout_marginLeft="6mm"
            android:layout_marginTop="-8dp"
            android:src="@drawable/icon_setting" />

        <ImageView
            android:id="@+id/curtain_logo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="-15dp"
            android:layout_marginBottom="@dimen/dimen_5dp"
            android:src="@drawable/icon_curtain_d" />

        <TextView
            android:id="@+id/curtain_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@null"
            android:text="Curtain"
            android:textColor="@color/text_white"
            android:textSize="@dimen/dimen_15dp" />

        <TextView
            android:id="@+id/curtain_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Open"
            android:textColor="@color/text_white"
            android:textSize="12dp" />

        <ImageView
            android:id="@+id/curtain_freeze"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="right"
            android:layout_marginTop="-20dp"
            android:src="@drawable/icon_lock"
            android:visibility="invisible" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/power_tile_background"
        android:layout_width="20mm"
        android:layout_height="21mm"
        android:background="@drawable/room_tiles_shape"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:padding="10dp">

        <ImageView
            android:id="@+id/power_setting"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_gravity="center_vertical|right"
            android:layout_marginLeft="6mm"
            android:layout_marginTop="-8dp"
            android:src="@drawable/icon_setting" />

        <ImageView
            android:id="@+id/power_logo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="-15dp"
            android:layout_marginBottom="@dimen/dimen_5dp"
            android:src="@drawable/icon_ac_d" />

        <TextView
            android:id="@+id/power_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@null"
            android:text="Power"
            android:textColor="@color/text_white"
            android:textSize="@dimen/dimen_15dp" />

        <TextView
            android:id="@+id/power_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Active"
            android:textColor="@color/text_white"
            android:textSize="12dp" />

        <ImageView
            android:id="@+id/power_freeze"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="right"
            android:layout_marginTop="-20dp"
            android:src="@drawable/icon_lock"
            android:visibility="invisible" />

    </LinearLayout>

</LinearLayout>