<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linear_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dimen_10dp"
    android:layout_marginBottom="@dimen/dimen_10dp"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/generic_tile_background"
        android:layout_width="20mm"
        android:layout_height="21mm"
        android:background="@drawable/room_tiles_shape"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:padding="10dp">

        <ImageView
            android:id="@+id/generic_setting"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_gravity="center_vertical|right"
            android:layout_marginLeft="6mm"
            android:layout_marginTop="-8dp"
            android:src="@drawable/icon_setting" />

        <ImageView
            android:id="@+id/generic_logo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="-15dp"
            android:layout_marginBottom="@dimen/dimen_5dp"
            android:src="@drawable/icon_light_fill_d" />

        <TextView
            android:id="@+id/generic_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@null"
            android:text="Generic"
            android:textColor="@color/text_white"
            android:textSize="@dimen/dimen_15dp" />

        <TextView
            android:id="@+id/generic_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2 Active"
            android:textColor="@color/text_white"
            android:textSize="12dp" />

        <ImageView
            android:id="@+id/generic_freeze"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="right"
            android:layout_marginTop="-20dp"
            android:src="@drawable/icon_lock"
            android:visibility="invisible" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/motion_tile_background"
        android:layout_width="20mm"
        android:layout_height="21mm"
        android:background="@drawable/room_tiles_shape"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:padding="10dp">

        <ImageView
            android:id="@+id/motion_setting"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_gravity="center_vertical|right"
            android:layout_marginLeft="6mm"
            android:layout_marginTop="-8dp"
            android:src="@drawable/icon_setting" />

        <ImageView
            android:id="@+id/motion_logo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="-15dp"
            android:layout_marginBottom="@dimen/dimen_5dp"
            android:src="@drawable/icon_motion_d" />

        <TextView
            android:id="@+id/motion_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@null"
            android:text="Motion"
            android:textColor="@color/text_white"
            android:textSize="@dimen/dimen_15dp" />

        <TextView
            android:id="@+id/motion_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2 Active"
            android:textColor="@color/text_white"
            android:textSize="12dp" />

        <ImageView
            android:id="@+id/motion_freeze"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="right"
            android:layout_marginTop="-20dp"
            android:src="@drawable/icon_lock"
            android:visibility="invisible" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/rgb_tile_background"
        android:layout_width="20mm"
        android:layout_height="21mm"
        android:background="@drawable/room_tiles_shape"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:padding="10dp">

        <ImageView
            android:id="@+id/rgb_setting"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_gravity="center_vertical|right"
            android:layout_marginLeft="6mm"
            android:layout_marginTop="-8dp"
            android:src="@drawable/icon_setting" />

        <ImageView
            android:id="@+id/rgb_logo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="-15dp"
            android:layout_marginBottom="@dimen/dimen_5dp"
            android:src="@drawable/icon_rgb_d" />

        <TextView
            android:id="@+id/rgb_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@null"
            android:text="RGB"
            android:textColor="@color/text_white"
            android:textSize="@dimen/dimen_15dp" />

        <TextView
            android:id="@+id/rgb_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Master"
            android:textColor="@color/text_white"
            android:textSize="12dp" />

        <ImageView
            android:id="@+id/rgb_freeze"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="right"
            android:layout_marginTop="-20dp"
            android:src="@drawable/icon_lock"
            android:visibility="invisible" />

    </LinearLayout>


