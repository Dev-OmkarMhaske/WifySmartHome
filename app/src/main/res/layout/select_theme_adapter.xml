<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginBottom="@dimen/dimen_10dp"
    android:background="@null">

    <LinearLayout
        android:id="@+id/generic_tile"
        android:layout_width="20mm"
        android:layout_height="21mm"
        android:background="@drawable/rectangle_shape_background"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/theme_img"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:src="@drawable/app_background_2"
            android:scaleType="centerCrop"/>

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:gravity="center_vertical"
           android:layout_gravity="center_horizontal"
           android:orientation="horizontal">

           <TextView
               android:id="@+id/theme_name"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="name"
               android:layout_weight="1"
               android:textColor="@color/bold_text_color"/>

           <RadioButton
               android:id="@+id/theme_radio"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:buttonTint="@color/bold_text_color"
                />

       </LinearLayout>

    </LinearLayout>

</LinearLayout>