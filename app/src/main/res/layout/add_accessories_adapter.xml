<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linear_layout"
    android:layout_width="20mm"
    android:layout_height="21mm"
    android:orientation="vertical"
    android:layout_marginLeft="10dp"
    android:layout_marginBottom="@dimen/dimen_10dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp"
        android:background="@drawable/rectangle_shape_background">

        <CheckBox
            android:id="@+id/accessories_check"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:button="@drawable/custom_checkbox" />

        <ImageView
            android:id="@+id/accessories_logo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="-20dp"
            android:src="@drawable/icon_light_fill_d"/>

        <TextView
            android:id="@+id/accessories_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Generic"
            android:textSize="@dimen/dimen_15dp" />

    </LinearLayout>

</LinearLayout>