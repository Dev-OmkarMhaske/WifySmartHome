<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rectangle_shape_background">

    <LinearLayout
        android:id="@+id/setting_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:weightSum="3"
        android:background="@drawable/white_bottom_border">

        <TextView
            android:id="@+id/title_accessories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Generic module"
            android:layout_weight="2.8"
            android:textSize="@dimen/text_sub_heading"
            android:layout_marginLeft="@dimen/dimen_20dp"
            android:textColor="@color/text_white"
            android:background="@null">
        </TextView>

        <ImageView
            android:id="@+id/setting_accessories"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_marginRight="@dimen/dimen_10dp"
            android:layout_weight="0.2"
            android:src="@drawable/icon_home_setting"
             />

    </LinearLayout>

</LinearLayout>