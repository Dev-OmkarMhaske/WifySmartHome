<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@null"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen_5dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/add_all_linear_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimen_10dp"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:id="@+id/room_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="Outside"
                android:textColor="@color/sub_title"
                android:textSize="@dimen/text_sub_heading" />

            <TextView
                android:id="@+id/add_all_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:text="Add All"
                android:textColor="@color/bold_text_color"
                android:textSize="@dimen/text_sub_heading" />

        </LinearLayout>

        <TextView
            android:id="@+id/room_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RoomName"
            android:layout_marginBottom="@dimen/dimen_5dp"
            android:textColor="@color/sub_text_color"
            android:textSize="@dimen/text_sub_heading"
            android:visibility="gone" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:descendantFocusability="blocksDescendants">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/room_vise_appliances_recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="-10dp"
                android:scrollbars="none" />

        </RelativeLayout>

    </LinearLayout>

</ScrollView>