<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dimen_10dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/rectangle_shape_background">

        <ImageView
            android:id="@+id/gesture_logo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/icon_up_gesture"
            android:layout_marginLeft="@dimen/dimen_20dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/gesture_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="gesture name"
                android:textSize="@dimen/text_sub_heading"
                android:layout_marginLeft="@dimen/dimen_20dp"/>

            <TextView
                android:id="@+id/gesture_scene"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Scene : name"
                android:layout_marginLeft="@dimen/dimen_20dp"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/gesture_delete"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:gravity="right"
            android:layout_marginRight="@dimen/dimen_10dp"
            android:src="@drawable/icon_delete_accessories"/>

    </LinearLayout>

</LinearLayout>