<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="10dip"
    android:layout_width="fill_parent"
    android:background="@color/App_edit_background"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dip"
        android:textSize="@dimen/text_sub_heading"
        android:textColor="@color/bold_text_color"
        android:text="Select installation type : " />

    <RadioGroup
        android:id="@+id/installation_radio_grp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_20dp"
        android:layout_toRightOf="@+id/ActiveTimeTitle"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/miniserver_radio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="@color/bold_text_color"
            android:checked="true"
            android:text="By Miniserver"
            android:textColor="@color/text_white" />

        <RadioButton
            android:id="@+id/router_radio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="@color/bold_text_color"
            android:text="By Router"
            android:layout_marginTop="@dimen/dimen_5dp"
            android:textColor="@color/text_white" />

    </RadioGroup>

    <Button
        android:id="@+id/save_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/dimen_10dp"
        android:layout_marginTop="@dimen/dimen_20dp"
        android:layout_marginEnd="@dimen/dimen_10dp"
        android:layout_marginBottom="@dimen/dimen_10dp"
        android:background="@drawable/rectangle_shape_background"
        android:text="Save"
        android:textAllCaps="false"
        android:textColor="@color/bold_text_color" />

</LinearLayout>