<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/rectangle_shape_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center_vertical"
        android:weightSum="4"
        android:layout_marginLeft="@dimen/dimen_10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/module_logo"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/icon_light_fill_a"/>

        <EditText
            android:id="@+id/accessories_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Light -1"
            android:layout_weight="3.9"
            android:background="@drawable/white_bottom_border"
            android:textColor="@color/text_white"
            android:layout_marginLeft="@dimen/dimen_10dp"
            android:textSize="@dimen/text_sub_heading"/>

        <CheckBox
            android:id="@+id/accessories_check"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="@dimen/dimen_5dp"
            android:button="@drawable/custom_checkbox"
            />

    </LinearLayout>

</LinearLayout>